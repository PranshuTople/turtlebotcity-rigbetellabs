<launch>


	<arg name="map_topic" value="planner_map" />

	<node pkg="move_base" type="move_base" respawn="false" name="move_base">
	    <rosparam file="$(find turtlebot_nav)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
	    <rosparam file="$(find turtlebot_nav)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
	    <rosparam file="$(find turtlebot_nav)/config/local_costmap_params.yaml" command="load" />
	    <rosparam file="$(find turtlebot_nav)/config/global_costmap_params.yaml" command="load" />
	    <rosparam file="$(find turtlebot_nav)/config/trajectory_planner.yaml" command="load" />
	    <rosparam file="$(find turtlebot_nav)/config/move_base_planner.yaml" command="load" />
		<remap from="map" to="$(arg map_topic)" />

	</node>
</launch>


